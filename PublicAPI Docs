info: 
  version: 1.0
  title: "720 Heuristic Developer Web API - Public"
  contact:
    name: Group 4
    email: Don't
tags:
  name: 720Dev
  description: Endpoints to control robot functionality
paths:
  '/status':
    get:
      description: Get the status of a given machine
    parameters:
      -in: header
       name: key
       schema:
        type: string
       required: true
       description: api key
     -in: header
      name: serial
      schema:
        type: string
      required: true
      description: serial number of machine being accessed
    responses:
      200:
        description: Request was successful, returns a status object.
        $ref: "definitions/status'
      400:
        descrtiption: Request was unsuccessful, serial or api key invalid
      500:
        description: Internal server error, there was a problem processing the request
  '/on':
    post:
      description: Turn on a given machine
    parameters:
     -in: header
       name: key
       schema:
        type: string
       required: true
       description: api key
     -in: header
      name: serial
      schema:
        type: string
      required: true
      description: serial number of machine being accessed
    responses:
      200:
        description: Request was successful
      400:
        descrtiption: Request was unsuccessful, serial or api key invalid
      500:
        description: Internal server error, there was a problem processing the request
  '/off':
    post:
      description: Turn off a given machine
    parameters:
     -in: header
       name: key
       schema:
        type: string
       required: true
       description: api key
     -in: header
      name: serial
      schema:
        type: string
      required: true
      description: serial number of machine being accessed
    responses:
      200:
        description: Request was successful
      400:
        descrtiption: Request was unsuccessful, serial or api key invalid
      500:
        description: Internal server error, there was a problem processing the request
  
  '/health':
    get:
      description: Get the health status of the API 
    parameters:
     -in: header
       name: key
       schema:
        type: string
       required: true
       description: api key
    responses:
      200:
        description: Request was successful, clean has been scheduled for 
      400:
        descrtiption: Request was unsuccessful, api key invalid
      418:
        description: I'm a teapot
      500:
        description: Internal server error, there was a problem processing the request
  '/lastclean':
    get:
      description: Get the statistics from the last robot clean
    parameters:
     -in: header
       name: key
       schema:
        type: string
       required: true
       description: api key
     -in: header
      name: serial
      schema:
        type: string
      required: true
      description: serial number of machine being accessed
    responses:
      200:
        description: Request was successful, returns a last clean object.
        $ref: "definitions/lastclean"
      400:
        descrtiption: Request was unsuccessful, api key or serial invalid
      404:
        description: Unable to find a previous clean
      500:
        description: Internal server error, there was a problem processing the request
  '/scheduleclean':
    get:
      description: Get the statistics from the last robot clean
    parameters:
     -in: header
       name: key
       schema:
        type: string
       required: true
       description: api key
    responses:
      200:
        description: Request was successful, returns a scheduled clean object.
        $ref: "definitions/scheduledclean"
      400:
        descrtiption: Request was unsuccessful, api key or serial invalid
      500:
        description: Internal server error, there was a problem processing the request
      
        
     
